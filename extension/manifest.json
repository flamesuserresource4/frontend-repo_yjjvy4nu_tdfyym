{
  "manifest_version": 3,
  "name": "Tommy — One‑Word AI",
  "description": "Tommy answers in one word or one sentence. Page‑aware. Optional site restriction.",
  "version": "1.0.0",
  "action": {
    "default_title": "Tommy",
    "default_popup": "popup.html"
  },
  "permissions": [
    "storage",
    "activeTab",
    "tabs",
    "contextMenus",
    "notifications"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
